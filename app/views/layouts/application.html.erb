<!DOCTYPE html>
<html>
  <head>
    <title>Myotto</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'Myotto', translations_path, class: "navbar-brand" %>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <% if logged_in?  %>
              <li><%= link_to t('.all_new_posts'), translations_path %></li>
              <li><%= link_to t('.all_books'), books_path %></li>
              <li><%= link_to t('.my_page'), user_path(current_user.id) %></li>
              <li><%= link_to t('.logout'), session_path(current_user.id), method: :delete %></li>
            <% else %>
              <li><%= link_to t('.create_user'), new_user_path %></li>
              <li><%= link_to t('.login'), new_session_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    </header>
    <main>
      <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
      <div class="yield_wrap"> 
        <%= yield %>
      </div>
    </main>
  </body>
</html>
