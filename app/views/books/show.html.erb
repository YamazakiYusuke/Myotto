<h1><%= t('.title') %>: <%= @book.title %></h1>
<p>
  <%= t('.author') %>: <%= @book.author %> ・ 
  <%= t('.issued_date') %>: <% if @book.issued_date.nil? %>
    <%= t('.unknown') %>
  <% else %>
    <%= @book.issued_date.strftime("%Y") %>
  <% end %> ・ 
  <%= t('.difficulty') %>: <%= @book.book_locale_statuses[0].difficulty %> ・ 
  <%= t('.locale') %>: <%= @book.book_locale_statuses[0].locale.name %> ・ 
  <%= t('.registration') %>: <%= @book.user[:name] if admin_user? %>
</p>
<br/><br/>
<table>
  <tbody>
    <% @sentences.each do |sentence| %>
      <tr>
        <td><%= sentence.content %></td>
        <td><%= link_to(t('.translate'), new_translation_path(sentence_id: sentence.id)) %></td>
        <td><%= link_to(t('.show_translation'), book_sentence_path(@book.id, sentence.id)) %></td>
        <td><%= link_to(t('.edit'), edit_book_sentence_path(@book.id, sentence.id)) if admin_user? %></td>
        <td><%= link_to(t('.destroy'), book_sentence_path(@book.id, sentence.id), method: :delete, data: { confirm: t('.confirm') }) if admin_user? %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div><%= paginate @sentences %></div>
