<% @translations.each do |t| %>
  <div>
    <%= link_to(t.sentence.book.title, book_path(t.sentence.book.id)) %><br/> 
    <%= t('.original') %>: <br/>
    <%= t.sentence.content %><br/> 
    <%= t('.translation') %>: <br/>
    <%= t.content %><br/>
