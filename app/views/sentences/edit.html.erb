<h1><%= t('.edit_sentence') %></h1>
<%= form_with(model: @sentence, url: {controller: 'sentences', action: 'update' }, local: true) do |form| %>
  <% if  @sentence.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize( @sentence.errors.count, t('.error')) %><%= t('.reject_save') %></h2>
      <ul>
      <%  @sentence.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.text_area(:content) %>
  </div>

  <div>
    <%= form.submit t('.submit') %>
  </div>
<% end %>
