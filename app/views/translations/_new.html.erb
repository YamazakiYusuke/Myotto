<%= form_with(model: translation) do |form| %>
  
  <%# エラーメッセージ %>
  <% if translation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(translation.errors.count, "error") %> prohibited this translation from being saved:</h2>
      <ul>
      <% translation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p><%= @sentence.content %></p>
    <p><%= form.label "翻訳フォーム" %></p>
    <p><%= form.text_area :content, id: "translation_content_#{sentence.id}" %></p>
    <%= form.hidden_field :sentence_id, value: @sentence.id  %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>