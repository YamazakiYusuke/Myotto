<h1>みんなの翻訳</h1>

<%= search_form_for @search do |f| %>
  <%= f.label :content_cont, "contentで検索" %>
  <%= f.search_field :content_cont %>
  <br /> 
  <%= f.label :sentence_content_cont, "sentenceで検索" %>
  <%= f.search_field :sentence_content_cont %>
  <div class="actions"><%= f.submit "検索" %></div>
<% end %>

<% @translations.each do |translation| %>
  <span>icon:</span><br /> 
  <span>投稿者: <strong><%= link_to(translation.user.name, user_path(translation.user.id)) %></strong></span><br /> 
    <span>原文: <%= translation.sentence.content %></span><br /> 
    <span>翻訳: <%= translation.content %></span><br /> 
    <span><%= link_to 'Show', translation_path(translation.id) %></span>
    <br /><br />  
<% end %>
